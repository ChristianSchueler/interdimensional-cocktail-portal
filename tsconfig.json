{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
  
    "compilerOptions": {
      "lib": ["es6"],
      "module": "es6",
      "target": "es2020",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",

      "outDir": "dist"
    },

    "include": ["ts/*"],
    "exclude": ["node_modules"]
  }